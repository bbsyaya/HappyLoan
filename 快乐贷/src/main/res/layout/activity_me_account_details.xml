<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayPublic_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:onClick="Back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="账户详情"
            android:textColor="@color/color_actionbar_txt"
            android:textSize="@dimen/actionbar_txt_size" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/me_account_head_linear"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="头像"
            android:textSize="@dimen/activity_me_txt_size" />

        <ImageView
            android:id="@+id/me_account_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_head" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greater" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />

    <LinearLayout
        android:id="@+id/me_account_nickname_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="昵称"
            android:textSize="@dimen/activity_me_txt_size" />

        <TextView
            android:id="@+id/me_account_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fly_ouyang"
            android:textColor="#ccc"
            android:textSize="@dimen/activity_me_txt_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greater" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />

    <LinearLayout
        android:id="@+id/me_account_signature_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="个性签名"
            android:textSize="@dimen/activity_me_txt_size" />

        <TextView
            android:id="@+id/me_account_signature"
            android:layout_width="220dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="哈哈哈，笑死我了"
            android:singleLine="true"
            android:textColor="#ccc"
            android:textSize="@dimen/activity_me_txt_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greater" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="邮箱"
            android:textSize="@dimen/activity_me_txt_size" />

        <TextView
            android:id="@+id/me_account_Email"
            android:layout_width="260dp"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:text="12345678901@qq.com"
            android:singleLine="true"
            android:textColor="#ccc"
            android:textSize="@dimen/activity_me_txt_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />

    <LinearLayout
        android:id="@+id/me_account_phone_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/color_gb_false"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="手机号"
            android:textSize="@dimen/activity_me_txt_size" />

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/me_account_phone"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="12345678901"
            android:singleLine="true"
            android:textColor="#ccc"
            android:textSize="@dimen/activity_me_txt_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/me_account_identity_linear"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_selector"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="身份信息"
            android:textSize="@dimen/activity_me_txt_size" />

        <TextView
            android:id="@+id/me_account_identity"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="欧阳"
            android:singleLine="true"
            android:textColor="#ccc"
            android:textSize="@dimen/activity_me_txt_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_personal_me" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greater" />
    </LinearLayout>

</LinearLayout>
