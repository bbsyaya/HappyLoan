<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayPublic_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:onClick="Back"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/me_wallet_payments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户充值"
            android:textColor="@color/color_gb_false"
            android:textSize="@dimen/actionbar_txt_size"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/me_bankcard_recharge_messages"
        android:layout_marginTop="20dp"
        android:background="@color/color_default_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/me_bank_icon"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/finds_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/me_bank_name"
            android:layout_gravity="center"
            android:text="银行卡"
            android:textSize="@dimen/activity_me_txt_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/greater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/me_wallet_recharge_messages"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:text="没有绑定银行卡，请先绑定！"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/color_default_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="金额(元)"
            android:textSize="@dimen/activity_me_txt_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_recharge_money_number"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:onClick="Recharge"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="充值"
        android:textColor="@color/color_default_bg"
        android:textSize="@dimen/activity_me_txt_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
