<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <ImageView
       android:id="@+id/select_img_popup_item_img"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_alignParentLeft="true"
       android:layout_centerVertical="true"
       android:paddingTop="9dp"
       android:paddingLeft="12dp"
       android:paddingRight="12dp"
       android:paddingBottom="17dp"
       android:scaleType="fitXY"
       />
    <!--android:src="@drawable/yxy"
       android:background="@drawable/pic_dir"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/select_img_popup_item_img"
        android:orientation="vertical">
        <TextView
            android:id="@+id/select_img_item_dir_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有图片"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/select_img_item_imt_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="37张"
            android:textSize="10sp"
            android:textColor="#444"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"/>
        <!--android:background="@drawable/dir_choose"-->
</RelativeLayout>